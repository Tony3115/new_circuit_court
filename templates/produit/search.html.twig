{% extends 'base.html.twig' %}

{% block title %}Résultats de la recherche{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Résultats pour "{{ query }}"</h2>
        
        {% if produits %}
            <ul class="list-group">
                {% for produit in produits %}
                    <li class="list-group-item">
                        <h3>{{ produit.name }}</h3>
                        <img src="{{ asset(produit.image) }}" alt="{{ produit.name }}">

                        <p>{{ produit.description }}</p>
                        <p><strong>Prix :</strong> {{ produit.prix }}€</p>
                        <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-primary">Voir le produit</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="alert alert-warning">Aucun produit trouvé pour "{{ query }}".</p>
        {% endif %}
    </div>
{% endblock %}
